{
    "name": "codzo/phpcodesniffer-git-hook",
    "type": "tool",
    "description": "GIT hook for PHP-Codesniffer",
    "keywords": ["git", "hook", "php","codesniffer"],
    "homepage": "https://github.com/codzo/phpcodesniffer-git-hook",
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "authors": [
        {
            "name": "Neil Fan",
            "email": "neil.fan@codzo.com",
            "homepage": "http://codzo.com",
            "role": "Developer"
        }
    ],
    "require": {
        "squizlabs/php_codesniffer": "*"
    },
    "scripts": {
        "apply-global": [
            "git config --global core.hooksPath \"`git rev-parse --show-toplevel`/hooks\""
        ],
        "apply-local": [
            "git config core.hooksPath \"`git rev-parse --show-toplevel`/hooks\""
        ],
        "post-package-install": [
            "@apply-local"
        ],
        "post-package-update": [
            "@apply-local"
        ],
        "post-install-cmd": [
            "@apply-global"
        ],
        "post-update-cmd": [
            "@apply-global"
        ]
    }
}
